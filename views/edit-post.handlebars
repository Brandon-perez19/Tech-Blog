<article>
    <h2> Edit Post</h2>
    <form>
        <div>
            <input type="text" name="edit-post" value="{{post.title}}" />
            <em> ({{post.post_url}}) </em>
        </div>
        <div>
            <a href="/post/{{post.id}}"> {{post.comments.length}} {{'comment' post.comments.length}}</a>
        </div>
        <button type="submit"> Save Post </button>
        <button type="button"> Delete Post</button>
    </form>
</article>
