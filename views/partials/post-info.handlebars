<article class="card m-1">
    <div class="card-header">
        <a href="{{post_url}}" target="_blank"> {{title}} </a>
        <span> ({{post_url}}) </span>
    </div>
    <div class="card-body">
        by {{user.username}} on {{format_Date created_at}} <br>
        <a href="/post/{{id}}" class="text-muted"> Comments </a>
    </div>
</article>