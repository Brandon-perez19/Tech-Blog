<section>
    <div>
        <h1> Create a new post!</h1>
        <form>
            <div>
                <label> Title </label>
                <input type="text" placeholder="Post title" name="title" />
            </div>
            <div>
                <label> Post Url </label>
                <input type="text" placeholder="Post Url" name="url" />
            </div>
            <button type="submit"> Create!</button>
        </form>
    </div>
</section>

{{#if post.length}}
<section>
    <div>
        <h2> Your Previous Posts </h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}"> Edit Post</a>
            </li>
            {{/each}}
        </ol>
    </div>
</section>
{{/if}}